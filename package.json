{
   "name": "static-html-css-template",
   "version": "1.0.0",
   "description": "",
   "main": "index.js",
   "scripts": {
      "dev": "concurrently \"browser-sync start --server 'src' --files 'src' --no-notify --no-open\" \"npm:css:watch\"",
      "css:watch": "postcss src/css/style.css -o src/css/style.min.css --watch",
      "build:css": "postcss src/css/style.css -o public/css/style.min.css --no-map",
      "build:copy": "node index.js",
      "build": "npm run build:css && npm run build:copy"
   },
   "devDependencies": {
      "browser-sync": "^2.27.11",
      "concurrently": "^8.2.0",
      "cpy-cli": "^4.1.0",
      "postcss": "^8.4.27",
      "postcss-cli": "^10.1.0",
      "cssnano": "^6.0.1"
   },
  "author": "Su",
   "license": "ISC"
}