{
    // Formatowanie
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",

    // Dla konkretnych języków — upewniamy się że Prettier formatuje HTML i CSS
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },
    "[css]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },

    // Prettier: używaj tylko lokalnej instalacji jeśli jest i wymuszaj plik konfig
    "prettier.preferLocal": true,
    "prettier.requireConfig": true,

    // EditorConfig honorowania
    "editor.detectIndentation": false,

    // HTML/CSS pomocnicze ustawienia
    "html.validate.scripts": false,
    "html.validate.styles": true,
    "css.validate": true,

    // Path intellisense: prefer relative imports
    "path-intellisense.mappings": {
        "assets": "${workspaceFolder}/assets"
    },

    // Podpowiedzi i sugestie
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.encoding": "utf8",

    // Opcjonalnie: wyciszamy niechciane generatory formatów (jeśli masz inne extensiony)
    // Tutaj ustawiamy preferencje, ale nie możemy zablokować rozszerzeń globalnych
    "editor.codeActionsOnSave": {
        "source.fixAll": false
    }
}
